<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>net6.0-windows10.0.22621.0</TargetFramework>
    <Nullable>enable</Nullable>
    <UseWindowsForms>true</UseWindowsForms>
    <ImplicitUsings>enable</ImplicitUsings>
    <ApplicationIcon>KhromaCoderLogo.ico</ApplicationIcon>
    <IsPublishable>False</IsPublishable>
    <SignAssembly>False</SignAssembly>
    <PackageId>KhromaCoder</PackageId>
    <Title>Khroma Coder</Title>
    <Version>1.0.18</Version>
    <Authors>KarstSkarn</Authors>
    <Company>KarstSkarn</Company>
    <Product>Khroma Coder</Product>
    <Description>Encode files into videos and retrieve them back.</Description>
    <PackageProjectUrl>https://github.com/KarstSkarn</PackageProjectUrl>
    <Copyright>https://github.com/KarstSkarn/KasTAS</Copyright>
  </PropertyGroup>

  <ItemGroup>
    <Content Include="KhromaCoderLogo.ico" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="System.Drawing.Common" Version="7.0.0" />
  </ItemGroup>

</Project>